{
	"name": "preact-pair",
	"description": "Util to help with the paired hook pattern",
	"version": "1.0.18",
	"author": {
		"email": "hello@vangware.com",
		"name": "Vangware",
		"url": "https://vangware.com"
	},
	"bugs": {
		"email": "issues@vangware.com",
		"url": "https://github.com/vangware/preact-pair/issues"
	},
	"devDependencies": {
		"@evilmartians/lefthook": "^1.3.9",
		"@types/node": "^18.15.11",
		"@vangware/configs": "^4.2.1",
		"@vangware/test": "^10.1.1",
		"@vangware/types": "^5.1.4",
		"c8": "^7.13.0",
		"eslint": "^8.37.0",
		"npm-run-all": "^4.1.5",
		"preact": "^10.13.2",
		"preact-render-to-string": "^6.0.2",
		"prettier": "^2.8.7",
		"rimraf": "^4.4.1",
		"stylelint": "^15.4.0",
		"ts-node": "^10.9.1",
		"typedoc": "^0.23.28",
		"typescript": "^5.0.3"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"homepage": "https://preact-pair.vangware.com",
	"keywords": [
		"hooks",
		"pair",
		"preact",
		"tsx",
		"typescript",
		"vangware"
	],
	"license": "MIT",
	"peerDependencies": {
		"preact": "^10.10.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vangware/preact-pair.git"
	},
	"scripts": {
		"clean": "rimraf ./dist",
		"compile": "tsc --project ./tsconfig.dist.json",
		"document": "typedoc",
		"git:pre-push": "run-s --print-label clean pre-compile lint test document",
		"lint": "eslint {src,tests}",
		"lint:fix": "eslint {src,tests} --fix",
		"pre-compile": "tsc --noEmit --project tsconfig.dist.json",
		"prepare": "lefthook install",
		"prepublishOnly": "run-s --print-label clean compile prettify",
		"prettify": "prettier --write --loglevel warn './dist/**/*.{js,ts}'",
		"test": "NODE_OPTIONS='--loader ts-node/esm' c8 test"
	},
	"sideEffects": false,
	"type": "module",
	"types": "./dist/index.d.ts"
}
